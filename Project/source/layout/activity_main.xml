<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.KotlinApp"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHome"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/navy"
            android:textColor="@color/light_yellow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_btn_home">
        </Button>
        <Button
            android:id="@+id/btnHealth"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/navy"
            android:textColor="@color/light_yellow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_btn_health">
        </Button>
        <Button
            android:id="@+id/btnStretch"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/navy"
            android:textColor="@color/light_yellow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_btn_stretch">
        </Button>

        <Button
            android:id="@+id/btnMe"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/navy"
            android:textColor="@color/light_yellow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_btn_me">
        </Button>
        <Button
            android:id="@+id/btnExit"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/navy"
            android:textColor="@color/light_yellow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_btn_exit">
        </Button>

    </LinearLayout>
</LinearLayout>